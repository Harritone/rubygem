-# frozen_string_literal: true
= simple_form_for([@course, @lesson]) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :title
    = f.label :content
    = f.rich_text_area :content
  = f.input :video
  %p
    - if @lesson.video.attached?
      .row
      = @lesson.video.filename
      = link_to 'Remove video', delete_video_course_lesson_path(@course, @lesson), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger'
  = f.input :video_thumbnail
  %p
    - if @lesson.video_thumbnail.attached?
      .row
      = image_tag @lesson.video_thumbnail, width: "200px"
      = @lesson.video_thumbnail.filename

  .form-actions
    = f.button :submit
